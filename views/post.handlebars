<!-- views/post.handlebars -->
<div class="post-content">
  <!-- Post content goes here -->
</div>

<div class="comments-section">
  <h3>Comments</h3>
  {{#each comments}}
    <div class="comment">
      <p>{{ this.content }}</p>
      <p>Posted by: {{ this.User.username }}</p> <!-- Assuming each comment has a User association -->
      <p>Date: {{ this.createdAt }}</p>
    </div>
  {{/each}}

  <!-- Comment form for authenticated users -->
  {{#if isAuthenticated}}
    <form action="/api/posts/{{ postId }}/comments" method="POST">
      <textarea name="content" rows="4" placeholder="Leave a comment"></textarea>
      <button type="submit">Submit Comment</button>
    </form>
  {{else}}
    <p>Please log in to leave a comment.</p>
  {{/if}}
</div>
