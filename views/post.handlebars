{{!-- views/post.handlebars --}}
<div class="post">
  <h2>{{post.title}}</h2>
  <p>{{post.content}}</p>
  <p>Author: {{post.user.username}}</p>
</div>
<div class="comments">
  <h3>Comments</h3>
  <div class="comment-form">
    <form action="/api/posts/{{post.id}}/comments" method="POST">
      <textarea name="content" placeholder="Add a comment"></textarea>
      <button type="submit">Comment</button>
    </form>
  </div>
  {{#each post.comments}}
    <div class="comment">
      <p>{{content}}</p>
      <p>Comment by: {{user.username}}</p>
    </div>
  {{/each}}
</div>
